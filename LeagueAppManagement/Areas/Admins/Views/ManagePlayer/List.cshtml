@model IEnumerable<PlayerViewModel>
@section Scripts {
    @Scripts.Render("~/bundles/admins")
}

<div class="col-sm-12" ng-controller="listController" ng-init="Init('@Model.Serialize()')">
    <h1>Ici la liste des joueurs</h1>
    @Html.ActionLink("Ajouter un joueur", "Edit", "ManagePlayer", new { area = "Admins" }, new { @class = "btn btn-default" })
    <hr />

    <table class="table table-striped">
        <tr>
            <th>Nom</th>
            <th>Numéro</th>
            <th>Position</th>
            <th>Classement</th>
            <th>Action</th>
        </tr>
        <tr ng-repeat="Player in Players">
            <td>{{Player.FullName}}</td>
            <td>{{Player.PhoneNumber}}</td>
            <td>{{Player.Position}}</td>
            <td>{{Player.Grade}}</td>
            <td> <button ng-click="Redirect('@Url.Action("Edit", "ManagePlayer", new { area = "Admins" })', Player.Guid)" class="btn btn-info">Modifier</button>  </td>
        </tr>
    </table>
</div>




