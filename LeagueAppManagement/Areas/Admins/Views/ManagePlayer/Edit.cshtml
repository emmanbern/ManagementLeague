
@section Scripts {
    @Scripts.Render("~/bundles/admins")
}

<div class="col-sm-12" ng-controller="editController" ng-init="Init()">
    <h1>Enregistrement d'un nouveau joueur</h1>
    <hr />
    <form name="form">
        <div class="form-group">
            <label for="FirstName">Prenom</label>
            <input type="text" name="FirstName" ng-model="FirstName" class="form-control" ng-change="Log(form.FirstName.$error)" required>
            <div ng-messages="form.FirstName.$error" class="text-danger" role="alert">
                <div ng-message="required">Ce champs doit être remplis</div>
             
            </div>
        </div>
        <div class="form-group">
            <label for="LastName">Nom</label>
            <input type="text" name="LastName" ng-model="LastName" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="PhoneNumber">Numéro</label>
            <input type="text" name="PhoneNumber" ui-mask="(999) 999-9999" ng-model="PhoneNumber" class="form-control" required>
        </div>

        <button class="btn btn-info" ng-click="Submit()">Sauvegarder</button>
    </form>

</div>
